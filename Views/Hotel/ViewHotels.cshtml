@model IEnumerable<PlanMyTripApp.Models.HotelClass>

@{
    ViewBag.Title = "ViewHotels";
}

<h2>ViewHotels</h2>
@{ 
    if(Session["UserId"]!=null)
    {
        @Html.ActionLink("Add Hotel","AddHotel")
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvrRoomRent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HotelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AvrRoomRent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
      @{ 
          if (Session["userid"] != null)
          {
              @*<td>@Html.ActionLink("Add Hotel", "AddHotel","Hotel")</td>*@
        <td>
            @Html.ActionLink("Edit", "EditHotel", new { id = item.HoteId, HotelName = item.HotelName, Phone = item.Phone, Rating = item.Rating, City = item.City, Address = item.Address, Description = item.Description, AvrRoomRent = item.AvrRoomRent, Email = item.Email }) |
            @Html.ActionLink("Details", "ViewHotel", new { id = item.HoteId }) |
            @Html.ActionLink("Delete", "DeleteHotel", new { id = item.HoteId, HotelName = item.HotelName, Phone = item.Phone, Rating = item.Rating, City = item.City, Address = item.Address, Description = item.Description, AvrRoomRent = item.AvrRoomRent, Email = item.Email })
        </td>
            }
          }
    </tr>
}

</table>
